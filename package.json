{
  "name": "girlscodemk-libraryapp-js",
  "version": "1.0.0",
  "main": "dist",
  "scripts": {
    "clean": "rm -rf build",
    "build-babel": "mkdir -p build && babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-babel",
    "dev": "npx nodemon -w src --exec \"babel-node src\"",
    "start": "node build/index.js",
    "db:reset": "npx sequelize db:drop && npx sequelize db:create && npx sequelize db:migrate",
    "test": "jest"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "repository": "git@github.com:GirlsCodeMK/libraryapp-hackathon-js-starthere",
  "author": "GirlsCode MK",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "pg": "^7.7.1",
    "pg-hstore": "^2.3.2",
    "regenerator-runtime": "^0.13.1",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9"
  }
}
